 --SISO Maincode

library IEEE;

use IEEE.STD_LOGIC_1164.ALL;


entity sh1 is

    Port ( clk : in  STD_LOGIC;

           in1 : in  STD_LOGIC;

           out1 : out  STD_LOGIC);

end sh1;

architecture Behavioral of sh1 is

signal s1 : STD_LOGIC_VECTOR(3 DOWNTO 0);

begin

process(clk,in1,s1)

begin

if(clk'EVENT and clk='1') THEN

s1(3 DOWNTO 1) <= s1(2 DOWNTO 0);

s1(0) <= in1;

end if;

end process;

out1 <= s1(3);

end Behavioral;

 

  

