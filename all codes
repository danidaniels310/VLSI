library IEEE;

use IEEE.STD_LOGIC_1164.ALL;

 

entity sh2 is

    Port ( clk : in  STD_LOGIC;

           in2 : in  STD_LOGIC;

           out2 : inout  STD_LOGIC_VECTOR (3 downto 0));

end sh2;

 

architecture Behavioral of sh2 is

begin

process(clk,in2,out2)

begin

if(clk'EVENT and clk='1') THEN

out2(3 DOWNTO 1) <= out2(2 DOWNTO 0);

out2(0) <= in2;

end if;

end process;

end Behavioral;

 



